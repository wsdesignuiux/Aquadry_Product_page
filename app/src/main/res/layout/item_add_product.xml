<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
    >


        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/shoes"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
           />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <customfonts.Medium_Textview
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#26292e"
                android:textSize="15dp"
                android:text="Rich N Topp Striker 03 Runing Shoes"
            android:maxLines="1"/>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="$"
                    android:layout_gravity="bottom"
                    android:textSize="12dp"
                />

                <customfonts.Regular_Textview
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/price"
                    android:gravity="bottom"
                    android:textSize="12dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <customfonts.Regular_Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/medium_text"
                android:layout_marginTop="12dp"
                android:textSize="12dp"
                android:text="Rich N Topp Striker 03 Runing Shoes"
            android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
            android:id="@+id/llMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            android:visibility="gone"
                >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/minus"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="12dp"
          />


                </LinearLayout>


            <customfonts.Regular_Textview
               android:id="@+id/quantityTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="center"
                android:textSize="14dp"
                android:textColor="#000000"
                android:text="0"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
               android:visibility="gone"
                />


            <LinearLayout
                android:id="@+id/llPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            >


            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/plus_button"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"


                   />

                </LinearLayout>
            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:id="@+id/llPlus"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="8dp">-->

            <!--<ImageView-->
                <!--android:layout_width="22dp"-->
                <!--android:layout_height="22dp"-->
                <!--android:src="@drawable/plus" />-->
<!--</LinearLayout>-->

        </LinearLayout>


    </LinearLayout>

